@{
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
    ViewData["Title"] = "Ambi Singh";
}

<section id="main">
    <div class="md-modal md-effect-16" id="modal-16">
        <div class="md-content">
            <h3 class="display-2">Send me a message</h3>
            <div>

                <form id="messageform" asp-controller="Home" asp-action="Index" data-ajax="true" data-ajax-method="POST">
                   <div class="mb-3 form-group">
                        <label for="NameFormControlInput" class="form-label">Name</label>
                        <input type="text" class="form-control" id="NameFormControlInput" placeholder="John Doe" name="Name" />
                    </div>
                    <div class="mb-3 form-group">
                        <label for="FormControlInput" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="FormControlInput" placeholder="name@example.com" name="Email" />
                    </div>
                    <div class="mb-3 form-group">
                        <label for="FormControlTextarea" class="form-label">Message</label>
                        <textarea class="form-control" id="FormControlTextarea" rows="3" name="Message"></textarea>
                    </div>
                    <div class="container-md">
                        <button id="send-btn" value="submit" onclick="PostInfo()">Send</button>
                    </div>
                </form>
                <div class="container-md">
                    <button class="md-close" onclick="clearMessageForm()">Close</button>
                </div>

                <p class="text-center" id="confirm">Message sent!</p>
            </div>
        </div>
    </div>


    <div class="modal-pdf md-effect-16" id="window-pdf">
        <div class="md-content">
            <h3 class="display-2">Resume</h3>
            <div class="pdfview" id="mypdfviewer">
                <embed src="./Content/Resume.pdf" class="pdfobject" type="application/pdf" title="Embedded PDF"
                       style="width: 100%; height: 100%;">
            </div>
            <div class="container-md">
                <button class="md-close">Close</button>
            </div>
        </div>
    </div>

    <div class="main-content">
        <div class="items">
            <div class="item-a">
                <div class="box a">
                    <p>
                        Hello, <br />
                        <h1>I'm Ambi</h1> (Amarjit Singh)
                    </p>
                    <p id="info"></p>
                </div>
                <div class="box b">
                    <button class="md-trigger" data-modal="modal-16">Contact Me</button>
                </div>
                <div class="box c">
                    <a href="http://www.linkedin.com/in/ambisingh" target="_blank">
                        <img src="~/content/linkedin-svgrepo-com.svg"></img>
                    </a>
                    <a href="http://github.com/ambitamber" target="_blank">
                        <img src="~/content/iconmonstr-github-1-240.png"></img>
                    </a>
                </div>
                <div class="box d">
                    <button class="md-trigger" data-modal="window-pdf">View my Resume</button>
                </div>
            </div>
            <div class="item-b">
                <img src="./Content/myphoto.jpg"></img>
            </div>
            <div class="item-c">
                <div class="nav-item active">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </div>
                <div class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Portfolio">Portfolio</a>
                </div>
            </div>
        </div>
    </div>
</section>

